<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!--<item name="android:textColorHint">@color/alpha_white</item>-->
        <!--<item name="colorControlNormal">@color/alpha_white</item>-->
        <!--<item name="colorControlActivated">@color/white</item>-->
        <!--<item name="colorControlHighlight">@color/white</item>-->

    </style>

    <!-- Base application theme. -->
    <style name="AppThemeDay" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="window_background">#2196F3</item>-->
    </style>


    <style name="AppThemeNight" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff243447</item>
        <item name="colorPrimaryDark">#ff1b2836</item>
        <item name="colorAccent">@color/md_blue_500</item>

    </style>

    <style name="AppTheme.NoActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="WindowAnimationFadeInOut">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
